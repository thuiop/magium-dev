    <button 
        hx-post="/saves/0"
        hx-target="#content"
        hx-swap="innerHTML"
        hx-push-url="true"
        hx-ext="submitlocalstorage"
    ><</button>
    <% for (let j = 0; j < 5; j++) { %>
        <button 
            hx-post="/saves/<%= j%>"
            hx-target="#content"
            hx-swap="innerHTML"
            hx-push-url="true"
            hx-ext="submitlocalstorage"
        >
            <%= j + 1 %>
        </button>
    <% }; %>
    <button 
        hx-post="/saves/4"
        hx-target="#content"
        hx-swap="innerHTML"
        hx-push-url="true"
        hx-ext="submitlocalstorage"
    >></button>
</div>
<div class="response">
    <button
        hx-get="/"
        hx-target="#content"
        hx-swap="innerHTML"
        hx-push-url="true"
    > 
        <%= savesReturnToGameText %>
    </button>
</div>
